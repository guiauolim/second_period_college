import java.util.Scanner;

public class Segundos {
	public static void main(String[] args) {
		// de claraçaõ de 
		Scanner leitor = new Scanner(System.in);
		int quantidadeHoras = 0;
		int quantidadeMinutos = 0;
		int quantidadeSegundos = 0;
		int resultadoTotalSegundos = 0;
		
		// Entrada de dados
		
		System.out.print("Informe a quantidade de horas: ");
		quantidadeHoras = leitor.nextInt();
		System.out.print("Informe a quantidade de minutos: ");
		quantidadeMinutos = leitor.nextInt();
		System.out.print("Informe a quantidade de segundos: ");
		quantidadeSegundos = leitor.nextInt();
		
		leitor.close();
		
		
		//Processamento e saida de dados
		
		resultadoTotalSegundos = ((3600 * quantidadeHoras) + (60 * quantidadeMinutos) + (quantidadeSegundos));
		System.out.println("Quantidade total de segundos é: " + quantidadeSegundos);
				
				
		
	}

}
